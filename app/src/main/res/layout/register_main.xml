<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#BF5558"
        tools:context=".loginregister.RegisterActivity">


    <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:hint="  Username"
            android:ems="10"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/usernameText_register"
            android:background="@drawable/rounded_edittext_registerlogin"            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="177dp"
            android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toTopOf="@+id/emailText_register"/>
    <EditText

            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:hint="  Email"
            android:ems="10"
            android:id="@+id/emailText_register"
            android:background="@drawable/rounded_edittext_registerlogin"            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@+id/usernameText_register"
            android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toTopOf="@+id/passwordText_register"
            android:layout_marginTop="24dp"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:hint="  Password"
            android:ems="10"
            android:id="@+id/passwordText_register"
            android:background="@drawable/rounded_edittext_registerlogin"            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@+id/emailText_register"
            android:layout_marginBottom="67dp"
            app:layout_constraintBottom_toTopOf="@+id/registerButton"
            android:layout_marginTop="24dp"/>
    <Button
            android:text="REGISTER"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="#FFFFFF"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/registerButton"
            android:background="@drawable/rounded_buttons"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            android:onClick="Register"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/passwordText_register"
            android:layout_marginBottom="49dp"
            app:layout_constraintBottom_toTopOf="@+id/signinButton"/>
    <Button
            android:onClick="SignIn"
            android:text="Allready has a account?"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:background="#BF5558"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/signinButton"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/registerButton"
            android:layout_marginBottom="158dp"/>
    <Button
            android:text="select photo"
            android:onClick="SelectPhoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/selectPhotoButton"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/usernameText_register"/>

    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintEnd_toEndOf="@+id/selectPhotoButton"
            app:layout_constraintStart_toStartOf="@+id/selectPhotoButton"
            app:layout_constraintTop_toTopOf="@+id/selectPhotoButton"
            app:layout_constraintBottom_toBottomOf="@+id/selectPhotoButton"
            android:id="@+id/selectedPhoto_immageView_register"
            app:civ_border_width="2dp"
            app:civ_border_color="#FFFFFF"
            />
</android.support.constraint.ConstraintLayout>