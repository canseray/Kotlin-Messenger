<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#BF5558"
>

    <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:hint="  Email"
            android:ems="10"
            android:background="@drawable/rounded_edittext_registerlogin"            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/emailText_login"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="250dp"
            android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toTopOf="@+id/passwordText_login"
            />
    <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:hint="  Password"
            android:ems="10"
            android:background="@drawable/rounded_edittext_registerlogin"            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/passwordText_login"
            app:layout_constraintTop_toBottomOf="@+id/emailText_login"
            android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toTopOf="@+id/loginButton"
            android:layout_marginTop="24dp"/>
    <Button

            android:text="LOGIN"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/loginButton"
            android:background="@drawable/rounded_buttons"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            android:onClick="Login"
            app:layout_constraintTop_toBottomOf="@+id/passwordText_login"
            android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toTopOf="@+id/backRegistration"
            android:layout_marginTop="32dp"/>

    <Button
            android:onClick="BackRegistration"
            android:text="Back to registration"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:background="#BF5558"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/backRegistration"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/loginButton"
            android:layout_marginBottom="180dp"
            android:layout_marginTop="16dp"/>
</android.support.constraint.ConstraintLayout>